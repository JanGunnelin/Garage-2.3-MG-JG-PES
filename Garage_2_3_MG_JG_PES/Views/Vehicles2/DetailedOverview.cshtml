@model IEnumerable<Garage_2_3_MG_JG_PES.Models.Vehicle>

@{
    ViewBag.Title = "DetailedOverview";
}

<h2>Detailed Overview</h2>

<table class="table">

    <tr>
        <th>
            @Html.ActionLink("Owner", "DetailedOverview", new { sortOrder = ViewBag.OwnerSortParm })
        </th>
        <th>
            @Html.ActionLink("Vehicle Type", "DetailedOverview", new { sortOrder = ViewBag.VehicleTypeSortParm })
        </th>
        <th>
            @Html.ActionLink("Registration Number", "DetailedOverview", new { sortOrder = ViewBag.RegistrationNumberSortParm })
        </th>
        <th>
            @Html.ActionLink("Color", "DetailedOverview", new { sortOrder = ViewBag.ColorSortParm })
        </th>
        <th>
            @Html.ActionLink("Brand", "DetailedOverview", new { sortOrder = ViewBag.BrandSortParm })
        </th>
        <th>
            @Html.ActionLink("Model", "DetailedOverview", new { sortOrder = ViewBag.ModelSortParm })
        </th>
        <th>
            @Html.ActionLink("Number of Wheels", "DetailedOverview", new { sortOrder = ViewBag.NumberOfWheelsSortParm })
        </th>
        <th>
            @Html.ActionLink("Check-In", "DetailedOverview", new { sortOrder = ViewBag.CheckInSortParm })
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Check-Out Vehicle", "CheckOut", new { id = item.Id })
            </td>
        </tr>
    }

</table>