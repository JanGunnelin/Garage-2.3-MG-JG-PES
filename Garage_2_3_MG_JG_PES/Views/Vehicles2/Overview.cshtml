@model IEnumerable<Garage_2_3_MG_JG_PES.Models.Vehicle>

@{
    ViewBag.Title = "Vehicles overview";
}

<h2>Vehicles Overview</h2>

<p>
    @Html.ActionLink("Check-In Vehicle", "CheckIn")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by Registration Number: @Html.TextBox("SearchString1")
    </p>
    <p>
        Find by Vehicle Type: @Html.TextBox("SearchString2")
    </p>
    <p>
    <input type="submit" value="Search" />
    </p>
}

<table class="table">


    <tr>
        <th>
            @Html.ActionLink("Owner", "Overview", new { sortOrder = ViewBag.OwnerSortParm })
        </th>
        <th>
            @Html.ActionLink("Vehicle Type", "Overview", new { sortOrder = ViewBag.VehicleTypeSortParm })
        </th>
        <th>
            @Html.ActionLink("Registration Number", "Overview", new { sortOrder = ViewBag.RegistrationNumberSortParm })
        </th>
        <th>
            @Html.ActionLink("Check-In", "Overview", new { sortOrder = ViewBag.CheckInSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Member.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckIn)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Check-Out Vehicle", "CheckOut", new { id = item.Id })
        </td>
    </tr>
    }

</table>